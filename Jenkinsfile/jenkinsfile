@Library('jenkins-shared-lib-2025') _

pipeline {
    agent any


    stages {

        stage('Git Checkout'){
                       when { expression {  params.action == 'create' } }
               steps{
               gitCheckout(
                   branch: "main",
                   url: "https://github.com/mhulic/jenkins-javaapp-2025.git"
               )
           	}
        }


        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                echo "doing build stuff.."
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                echo "doing test stuff.."
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo "Deliver...."
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}