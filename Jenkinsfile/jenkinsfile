@Library('jenkins-shared-lib-2025') _

pipeline {
    agent any


    stages {

        stage('Git Checkout'){
                       when { expression {  params.action == 'create' } }
               steps{
               gitCheckout(
                   branch: "main",
                   url: "https://github.com/vikash-kumar01/mrdevops_java_app.git"
               )
           	}
        }

        stage('Unit Test Maven'){
                       when { expression {  params.action == 'create' } }
               steps{
				   mvnTest()
           	}
        }
    }
}